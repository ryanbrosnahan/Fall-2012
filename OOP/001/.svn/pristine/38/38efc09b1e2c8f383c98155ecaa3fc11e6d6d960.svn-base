#include <iostream>
#include "trajectory.hpp"

int main() {

  // input the starting height, initial velocity, and time
  std::cout << "Enter the initial height (feet): ";
  double starting_height;
  std::cin >> starting_height;
  std::cout << "Enter the initial velocity (feed/sec): ";
  double initial_velocity;
  std::cin >> initial_velocity;
  std::cout << "Enter the time (sec): ";
  double time;
  std::cin >> time;

  // output the height after time seconds
  std::cout << "The height of the object after " << time << " seconds is " << 
              height(starting_height, initial_velocity, time) << '\n';

  return 0;
}
